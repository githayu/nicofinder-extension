{
  "name": "Nicofinder",
  "version": "2.8.0",
  "manifest_version": 2,
  "description": "Nicofinderでの動画視聴を支援する拡張機能です。",
  "author": "Hayu",
  "permissions": [
    "tabs",
    "cookies",
    "storage",
    "webRequest",
    "contextMenus",
    "notifications",
    "webRequestBlocking",
    "*://*.nicofinder.net/*",
    "*://*.nicovideo.jp/*",
    "*://*.dmc.nico/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Nicofinder",
    "default_popup": "html/popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": ["js/vendor.js", "js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.nicofinder.net/watch/*"],
      "js": ["js/vendor.js", "js/content-scripts/watch.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.nicofinder.net/*", "*://www.nicovideo.jp/*"],
      "js": ["js/vendor.js", "js/content-scripts/queue-manager.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["*://*.nicofinder.net/*"]
  },
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "homepage_url": "https://github.com/githayu/nicofinder-extension"
}
