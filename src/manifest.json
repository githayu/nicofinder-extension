{
  "name": "Nicofinder",
  "version": "2.1.1",
  "manifest_version": 2,
  "description": "Nicofinderでの動画視聴を支援する拡張機能です。",
  "author": "Hayu",
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "contextMenus",
    "webRequestBlocking",
    "*://*.nicofinder.net/*",
    "*://*.nicovideo.jp/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Nicofinder",
    "default_popup": "html/popup.html"
  },
  "background": {
    "persistent": true,
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ]
  },
  "applications": {
    "gecko": {
      "id": "extension@nicofinder.net"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.nicofinder.net/*"
      ],
      "js": [
        "js/vendor.js",
        "js/content_scripts/extension-provider.js",
        "js/content_scripts/nicofinder-v2.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "js/vendor.js",
    "js/extension-provider.js"
  ],
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "homepage_url": "http://www.nicofinder.net/extension"
}
