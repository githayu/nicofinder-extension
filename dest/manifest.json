{
  "name": "Nicofinder",
  "version": "1.2.0",
  "manifest_version": 2,

  "description": "Nicofinderでの動画視聴を支援する拡張機能です。",

  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "contextMenus",
    "webRequestBlocking",
    "*://*.nicofinder.net/*",
    "http://*.nicovideo.jp/*",
    "http://*.nimg.jp/*"
  ],

  "page_action": {
    "default_icon": "img/page-action-icon.png",
    "default_title": "Nicofinder",
    "default_popup": "html/popup.html"
  },

  "background": {
    "scripts": [
      "js/jquery-2.1.3.min.js",
      "js/core.js",
      "js/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "http://*.nicofinder.net/*"
      ],

      "js": [
        "js/extension-provider.js",
        "js/jquery-2.1.3.min.js",
        "js/script.js"
      ],

      "css": [],

      "run_at": "document_start",
      "all_frames": true
    },

    {
      "matches": [
        "http://www.nicovideo.jp/watch/*"
      ],

      "js": [
        "js/player/app.js"
      ],

      "css": []
    }
  ],

  "web_accessible_resources": [
    "js/extension-provider.js"
  ],

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },

  "homepage_url": "http://www.nicofinder.net/extension"
}
