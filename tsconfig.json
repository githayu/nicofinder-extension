{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": ".",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "inlineSources": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "lf",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ESNext"]
  },
  "include": ["src"]
}
