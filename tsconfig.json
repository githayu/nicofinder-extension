{
  "compilerOptions": {
    "outDir": "./dist/",
    "jsx": "react",
    "baseUrl": ".",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true,
    "inlineSources": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "newLine": "lf",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictFunctionTypes": false,
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*", "test/**/*"]
}
